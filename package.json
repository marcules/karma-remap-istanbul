  "bugs": {
    "url": "https://github.com/marcules/karma-remap-istanbul/issues"
  },
  "homepage": "https://github.com/marcules/karma-remap-istanbul#readme",
  "dependencies": {
    "istanbul": "^0.4.3",
    "object.assign": "^4.0.4",
    "remap-istanbul": "^0.6.4"
  },
